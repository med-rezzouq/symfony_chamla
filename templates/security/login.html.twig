{% extends 'base.html.twig' %}

{% block body %}

	<h1>Connexion !</h1>


	<form action="{{ path('security_login') }}" method="post">

		<div class="form-group">
			<input type="text" name="_username" id="" class="form-control" required placeholder="Adresse email ..."/>
		</div>

		<div class="form-group">
			<input type="text" name="_password" id="" class="form-control" required placeholder="Mot de passe ..."/>
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-success mt-3">
				Connexion !</button>
		</div>

	</form>


{% endblock %}
